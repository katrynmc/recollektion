<!--Logged in user view -->
<% if user_signed_in? %>

<div class="row">
  <div class="home-image"><%= image_tag("reco-home2.png") %></div>
</div>

<div class="row">
  <div class="col-md-1 white-banner"></div>

  <div class="col-sm-12 col-md-5 white-banner">
    <h2>A few of my favorite things</h2>
  </div>

  <div class="col-sm-12 col-md-5 white-banner">
    <h4 class="button pull-right"> <%= link_to 'New category', new_user_category_path(current_user, Category.new) %></h4>
    <h4 class="button pull-right"> <%= link_to 'New preference', new_brand_path %></h4>
    <h4 class="button pull-right"> <%= link_to 'View categories', user_categories_path(current_user) %></h4>
    <br>
  </div>

  <div class="col-md-1 white-banner"></div>
</div>

<div class="row">
  <div class="col-md-1"></div>

  <div class="col-md-10">

  <%= render 'layouts/alerts' %>
      <%= @category = current_user.categories.where(name: "uncategorized").first %>
      <%= render 'categories/category' %>
  </div>

  <div class="col-md-1"></div>
</div>

<div class="row">
  <div class="col-md-1"></div>
  <div class="col-md-10">
    <%= render 'preferences/preference' %>
  </div>
  <div class="col-md-1"></div>
</div>
<% end %>

<% if user_signed_in? == false %>
  <!--Introduction to the site -->
  <div class="row">
    <div class="home-image"><%= image_tag("reco-home.png") %></div>
  </div>

  <div class="row">
    <div class="home-spacer text-center">
      <p class="tag-line">Keep track of <i>everything</i> you like &mdash; and everything you don't.</p>
    </div>
  </div>

  <div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-10">
      <div class="col-md-4 text-center symbols">
        <%= image_tag("camera.png", :class => "img-rounded") %><br>
        <br>
        <p class="lead">Upload images <br>of the products and <br>services you try.</p>
      </div>

      <div class="col-md-4 text-center symbols">
        <%= image_tag("grid.png", :class => "img-rounded") %><br>
        <br>
        <p class="lead">Group experiences into<br>custom categories. Track <br>what's important to you.</p>
      </div>

      <div class="col-md-4 text-center symbols">
        <%= image_tag("heart.png", :class => "img-rounded") %><br>
        <br>
        <p class="lead">Rate your experiences. <br>Recall the ones you love and <br>avoid the ones you don't.</p>
      </div>
    </div>
    <div class="col-md-1"></div>
  </div>
<% end %>

<div class="home-spacer2"></div>
