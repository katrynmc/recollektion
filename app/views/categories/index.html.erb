<div class="row">
  <div class="col-md-3 "></div>
  <div class="col-md-6 ">
  <h1 class="white-banner">Current categories</h1>
<% category = current_user.categories.where(name: "uncategorized").first %>
<h4 class="button darker"> <%= link_to 'Create new category', new_user_category_path(current_user, Category.new) %>
      </h4>
      <h4 class="button pull-right"> <%= link_to 'New preference', new_user_preference_path(current_user, category, Preference.new) %>
</h4><br>

<% if user_signed_in? %>
  <% @categories.each do |category| %>
  <hr>
    <div class="category">
      <%= category.name %>
    </div>
<div class="pull-right">
    <div class="edit">
      <%= link_to user_category_path(current_user, category), method: :delete, data: { confirm: 'Delete this category?' } do %>
        <span class="glyphicon glyphicon-remove"></span>
      <% end %>
    </div>
    <div class="edit">
      <%= link_to edit_user_category_path(current_user, category) do %>
      <span class="glyphicon glyphicon-pencil"></span>
      </div><br>
    <% end %>
</div>

  <% end %>
<% end %>


</div>
  <div class="col-md-3 "></div>
</div>
<div class="home-spacer"></div>

