<div class="row">
  <div class="home-image"><%= image_tag("reco-home2.png") %></div>
</div>
<div class="row home-spacer">
  <div class="col-md-4"></div>
  <div class="col-md-4">
    <p class="tag-line">Add a new brand / type</p>
  </div>
  <div class="col-md-4"></div>
</div>

<div class="row">

  <div class="col-md-4"></div>

  <div class="col-md-3">
    <div class="home-spacer2"></div>
    <% if @brand.errors.any? %>
    <div id="error_explanation">
      <div class="alert alert-danger" role="alert">
        <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span></button>
        <h4><strong><%= pluralize(@brand.errors.count, "error") %> prohibited this brand from being saved:</strong></h4>
        <ul><% @brand.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
    <% end %>

    <%= form_for @brand, :url => brands_path  do |f| %>
      <h1><%= f.text_field :name %></h1>
      <%= f.submit "Next", :class => "btn btn-primary" %>
    <% end %>
  </div>
  <div class="col-md-3 "></div>
</div>
<div class="home-spacer2"></div>
<div class="home-spacer2"></div>
